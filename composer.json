{
    "name": "aloko/keycloak",
    "description": "Laravel Driver for Keycloak",
    "keywords": [
        "aloko",
        "keycloak"
    ],
    "homepage": "https://github.com/aloko/keycloak",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mustafa Ehsan Alokozay",
            "email": "mustafa.aloko@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "lcobucci/jwt": "^4.1",
        "stevenmaguire/oauth2-keycloak": "^2.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Aloko\\Keycloak\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aloko\\Keycloak\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aloko\\Keycloak\\KeycloakServiceProvider"
            ],
            "aliases": {
                "Keycloak": "Aloko\\Keycloak\\KeycloakFacade"
            }
        }
    }
}
